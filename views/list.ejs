<%-include('./partials/header.ejs')%>
<body>
    <center>
        <h1>My To-Do List: </h1>
        <a class="button" href="/add">New Task</a>
    </center>
    <div class="container">
        <table>
          <thead>
            <tr>
              <th>Title :</th>
              <th>Do by :</th>
              <th>Completed?</th>
              <th></th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <!--start of task-->
            <% for (let id in tasks) { %>
            <tr>
              <td><%=tasks[id].title%></td>
              <td><%=tasks[id].dueDate%></td>
              <td><a class="button button-outline" href=/completed/<%= id %>><%=tasks[id].completed%></a></td>
              <td><a class="button" href="/tasks/<%= id %>">View</a></td>
              <td><a class="button" href="/delete/<%= id %>">Delete</a></td>
            </tr>
            <% } %>
           <!--end of task -->
         </tbody>
        </table>
    </div>
</body>
</html>